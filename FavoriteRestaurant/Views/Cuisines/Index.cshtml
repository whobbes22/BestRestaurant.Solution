@{
  Layout = "_Layout";
}

@using FavoriteRestaurant.Models;

<h1>Cuisines</h1>


@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
}  

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.CuisineType}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Cuisine Type", "Create")</p>
<p>@Html.ActionLink("Add new Restaurant", "Create", "Restaurants")</p>