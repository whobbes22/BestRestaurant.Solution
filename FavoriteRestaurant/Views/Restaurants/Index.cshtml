@{
  Layout = "_Layout";
}

@using FavoriteRestaurant.Models;
@model List<FavoriteRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>Fool no Restaurants have been added yet! What did you expect?</h3>
} 

<ul>
  @foreach (Restaurant restaurant in Model)
  {
     <li>@Html.ActionLink($"{restaurant.RestaurantName}","Details", new { id = restaurant.RestaurantId})</li> // may need to add more
  }

</ul> 

<p>@Html.ActionLink("Add new restaurant", "Create")</p>